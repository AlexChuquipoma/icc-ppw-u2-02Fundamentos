---

const links = [
  { href: "/", label: "Home" },
  { href: "/perfilpage", label: "Perfil" },
  { href: "/proyectos", label: "Proyectos" },
  { href: "/proyectos-dos", label: "Proyectos Dos" },
  { href: "/formulariopage", label: "Formulario" }
];
---

<nav>
  {links.map(link => (
    <a
      href={link.href}
      class={Astro.url.pathname === link.href ? "active" : ""}
    >
      {link.label}
    </a>
  ))}
</nav>

<style>
  nav {
    background-color: #159;
    padding: 1rem;
    overflow: hidden;
  }
  a {
    color: white;
    text-decoration: none;
    margin-right: 1rem;
    font-weight: bold;
  }
  a.active {
    color: yellow;
    text-decoration: underline;
  }
</style>
